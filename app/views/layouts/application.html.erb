<!DOCTYPE html>
<html>
<head>
  <title>PickemApp</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>
<h1><%= link_to "Pick'em League", dashboard_path %></h1>

<% if signed_in? %>
	<span>Hello <%= link_to current_user.username, user_path(current_user), method: :get %></span>
	<span><%= button_to "Sign out", session_path, method: :delete %></span>
<% end %>

<%= yield %>

</body>
</html>
